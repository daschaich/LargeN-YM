# Makefile for Libraries for QCD programs
# This template file defines rules and macros common to all architectures
# It is intended to be an include file for other Makefiles.
# Don't use it by itself!

.SUFFIXES: .1o .2o

.c.1o:
	${CC} -c ${CFLAGS} -DPRECISION=1 $*.c -o $*.1o
.c.2o:
	${CC} -c ${CFLAGS} -DPRECISION=2 $*.c -o $*.2o

# List of headers currently used by some or all library routines
# or by inheritance from their header files
HEADERS = ../include/config.h    \
          ../include/complex.h   \
          ../include/dirs.h      \
          ../include/random.h    \
          ../include/int32type.h \
          ../include/precision.h \
          ../include/su3.h

# To force a full remake when switching or updating Makefiles
LASTMAKE = .lastmake.${MAKEFILE}

ALLMAKES = ${MAKEFILE} Make_template

${LASTMAKE}: ${ALL_MAKES}
	-/bin/rm -f .lastmake.*
	${MAKE} -f ${MAKEFILE} clean
	touch ${LASTMAKE}

COMPLEXOBJS1 =  cmplx.1o  cexp.1o  clog.1o  csqrt.1o  ce_itheta.1o \
               dcmplx.1o dcexp.1o dclog.1o dcsqrt.1o dce_itheta.1o

COMPLEXOBJS2 =  cmplx.2o  cexp.2o  clog.2o  csqrt.2o  ce_itheta.2o \
               dcmplx.2o dcexp.2o dclog.2o dcsqrt.2o dce_itheta.2o

${COMPLEXOBJS1} : ${HEADERS} ${ALLMAKES} ${LASTMAKE}
${COMPLEXOBJS2} : ${HEADERS} ${ALLMAKES} ${LASTMAKE}

complex.1.a: ${COMPLEXOBJS1}
	${AR} rcs $@ ${COMPLEXOBJS1}

complex.2.a: ${COMPLEXOBJS2}
	${AR} rcs $@ ${COMPLEXOBJS2}

SU3OBJS1 = addmat.1o addvec.1o cmp_ahmat.1o cs_m_a_vec.1o \
	det.1o clear_mat.1o dumpmat.1o dumpvec.1o clearvec.1o m_amatvec.1o \
	m_mat_an.1o m_mat_na.1o m_mat_nn.1o m_matvec.1o \
	make_ahmat.1o rand_ahmat.1o tr_prod.1o s_m_vec.1o s_m_mat.1o \
	adjoint.1o rdot.1o mat_copy.1o vec_copy.1o trace.1o \
	uncmp_ahmat.1o msq_vec.1o sub4vecs.1o \
	l_su2_hit_n.1o r_su2_hit_a.1o dumpsu2.1o \
	m_su2_mat_vec_n.1o m_su2_mat_vec_a.1o \
	gaussrand.1o byterevn.1o prefetch.1o \
	m_mat_an_f.1o m_mat_na_f.1o m_mat_nn_f.1o tr_prod_f.1o \
	adjoint_f.1o mat_copy_f.1o trace_f.1o \
	dumpmat_f.1o dump_ahmat_f.1o clear_mat_f.1o addmat_f.1o \
	clearvec_f.1o r_su2_hit_a_f.1o l_su2_hit_n_f.1o s_m_mat_f.1o \
	s_a_d_mat_f.1o cs_a_d_mat_f.1o cs_m_mat_f.1o

SU3OBJS2 = addmat.2o addvec.2o cmp_ahmat.2o cs_m_a_vec.2o \
	det.2o clear_mat.2o dumpmat.2o dumpvec.2o clearvec.2o m_amatvec.2o \
	m_mat_an.2o m_mat_na.2o m_mat_nn.2o m_matvec.2o \
	make_ahmat.2o rand_ahmat.2o tr_prod.2o s_m_vec.2o s_m_mat.2o \
	adjoint.2o mat_copy.2o vec_copy.2o trace.2o \
	uncmp_ahmat.2o msq_vec.2o sub4vecs.2o \
	l_su2_hit_n.2o r_su2_hit_a.2o dumpsu2.2o \
	m_su2_mat_vec_n.2o m_su2_mat_vec_a.2o \
	gaussrand.2o byterevn.2o prefetch.2o \
	m_mat_an_f.2o m_mat_na_f.2o m_mat_nn_f.2o tr_prod_f.2o \
	adjoint_f.2o mat_copy_f.2o trace_f.2o \
	clear_mat_f.2o dumpmat_f.2o dump_ahmat_f.2o addmat_f.2o \
	clearvec_f.2o r_su2_hit_a_f.2o l_su2_hit_n_f.2o s_m_mat_f.2o \
	s_a_d_mat_f.2o cs_a_d_mat_f.2o cs_m_mat_f.2o

WILSON_OBJS1 = wp_shrink.1o wp_grow.1o dump_wvec.1o \
	clear_wvec.1o proj_w.1o copy_wvec.1o add_wvec.1o \
	s_m_wvec.1o msq_wvec.1o wvec_dot.1o mb_gamma.1o mb_gamma_l.1o \
	mb_gamma_r.1o mswvb_gamma_l.1o mswvb_gamma_r.1o cs_m_wvec.1o \
	m_mat_wvec.1o m_mat_hwvec.1o m_amat_hwvec.1o grow4wvecs.1o wp_shrink4.1o

WILSON_OBJS2 = wp_shrink.2o wp_grow.2o dump_wvec.2o \
	clear_wvec.2o proj_w.2o copy_wvec.2o add_wvec.2o \
	s_m_wvec.2o msq_wvec.2o wvec_dot.2o mb_gamma.2o mb_gamma_l.2o \
	mb_gamma_r.2o mswvb_gamma_l.2o mswvb_gamma_r.2o cs_m_wvec.2o \
	m_mat_wvec.2o m_mat_hwvec.2o m_amat_hwvec.2o grow4wvecs.2o wp_shrink4.2o

${SU3OBJS1} ${WILSON_OBJS1} : ${HEADERS} ${ALLMAKES} ${LASTMAKE}
${SU3OBJS2} ${WILSON_OBJS2} : ${HEADERS} ${ALLMAKES} ${LASTMAKE}

# Special header dependencies
byterevn.o : ../include/int32type.h
gaussrand.1o : ../include/random.h
gaussrand.2o : ../include/random.h

su3.1.a::	 ${SU3OBJS1}
	${AR} rcs $@ ${SU3OBJS1}
su3.1.a::	 ${WILSON_OBJS1}
	${AR} rcs $@ ${WILSON_OBJS1}

su3.2.a::	 ${SU3OBJS2}
	${AR} rcs $@ ${SU3OBJS2}
su3.2.a::	 ${WILSON_OBJS2}
	${AR} rcs $@ ${WILSON_OBJS2}

LIBRARIES1 = complex.1.a su3.1.a
LIBRARIES2 = complex.2.a su3.2.a

ifeq ($(strip ${PRECISION}),1)

all: checkcc ${LIBRARIES1}

else

all: checkcc ${LIBRARIES2}

endif

checkcc:
	@echo ================================================================
	@echo PLEASE CHECK COMPILERS: Libraries: ${CC}.  Application: ${APP_CC}
	@echo ================================================================

clean:
	-/bin/rm -f *.o
