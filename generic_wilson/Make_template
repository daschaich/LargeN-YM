#  Generic routines for Wilson fermions
#
#  Generic make-include file for generic_wilson codes
#  This template file defines rules and macros common to all applications
#  It is intended to be an include file for other Makefiles.
#  Don't use it by itself!
#
#  The paths are relative to the application directory.

G_WILSON_ALL = boundary_flip.o \
               dslash.o \
               fermion_rep.o \
               fermion_rep_as_2.o \
               fermion_rep_f.o \
               fermion_rep_sym_2.o \
               wilson_invert.o

# Must list our headers in generic_wilson_includes.h
G_WILSON_HEADERS = \
  ../include/config.h \
  ../include/complex.h \
  ../include/su3.h \
  ../include/macros.h \
  ../include/comdefs.h \
  ../include/generic.h \
  ../include/generic_quark_types.h \
  ../include/generic_wilson.h \
  lattice.h

G_WILSON_ALL_DEPEND = \
  ../generic_wilson/generic_wilson_includes.h \
  ../generic_wilson/Make_template \
  ../include \
  ${LASTMAKE} \
  ${G_WILSON_HEADERS}

${G_WILSON_ALL}: ${G_WILSON_ALL_DEPEND}

boundary_flip.o: ../generic_wilson/boundary_flip.c
	${CC} -c ${CFLAGS} $<
dslash.o: ../generic_wilson/dslash.c
	${CC} -c ${CFLAGS} $<
fermion_rep.o: ../generic_wilson/fermion_rep.c
	${CC} -c ${CFLAGS} $<
fermion_rep_as_2.o: ../generic_wilson/fermion_rep_as_2.c
	${CC} -c ${CFLAGS} $<
fermion_rep_f.o: ../generic_wilson/fermion_rep_f.c
	${CC} -c ${CFLAGS} $<
fermion_rep_sym_2.o: ../generic_wilson/fermion_rep_sym_2.c
	${CC} -c ${CFLAGS} $<
wilson_invert.o: ../generic_wilson/wilson_invert.c
	${CC} -c ${CFLAGS} $<
